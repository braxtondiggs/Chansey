# ────────────────────────────────
# 🔐 Authentication & API Keys
# ────────────────────────────────
AUTHORIZER_CLIENT_ID=your_authorizer_client_id_here
AUTHORIZER_REDIRECT_URL=https://example.com/auth/callback
AUTHORIZER_URL=https://auth.example.com/

BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here

COINBASE_API_KEY=your_coinbase_pro_api_key_here
COINBASE_API_SECRET=your_coinbase_pro_api_secret_here
COINBASE_API_PASSPHRASE=your_coinbase_pro_api_passphrase_here

CHANSEY_API_KEY=your_chansey_api_key_here
CCA_API_KEY=your_cca_api_key_here
COOKIE_SECRET=your-cookie-signing-secret

# ────────────────────────────────
# 🧠 JWT / Auth Tokens
# ────────────────────────────────
JWT_SECRET=your_jwt_secret_here
JWT_REFRESH_SECRET=your_different_jwt_refresh_secret_here
JWT_EXPIRATION_TIME=15m
JWT_REFRESH_EXPIRATION_TIME=7d

# ────────────────────────────────
# 🗄️ Database (PostgreSQL)
# ────────────────────────────────
DATABASE_URL=jdbc:postgresql://localhost:5432/yourdb
PGHOST=localhost
PGPORT=5432
PGDATABASE=yourdb
PGUSER=your_username
PGPASSWORD=your_password_here

# ────────────────────────────────
# 🪣 MinIO (Object Storage)
# ────────────────────────────────
MINIO_HOST=your_minio_host_here
MINIO_PORT=9000
MINIO_USE_SSL=true
MINIO_ACCESS_KEY=your_minio_access_key_here
MINIO_SECRET_KEY=your_minio_secret_key_here
MINIO_BUCKET_NAME=your_minio_bucket_name_here
MINIO_BUCKET_REGION=us-east-1

# ────────────────────────────────
# 🔁 Redis (Cache)
# ────────────────────────────────
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_TLS=false
REDIS_USER=
REDIS_PASSWORD=

# ────────────────────────────────
# ⚙️ App Settings
# ────────────────────────────────
PORT=3000
NODE_ENV=development
DISABLE_BACKGROUND_TASKS=false

# ────────────────────────────────
# 🧪 Backtesting
# ────────────────────────────────
BACKTEST_HISTORICAL_QUEUE=backtest-historical
BACKTEST_REPLAY_QUEUE=backtest-replay
BACKTEST_TELEMETRY_STREAM=backtest-telemetry
BACKTEST_HISTORICAL_CONCURRENCY=4
BACKTEST_REPLAY_CONCURRENCY=2
